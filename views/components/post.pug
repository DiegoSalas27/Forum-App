mixin post(data)
  li(class="py-12")
    article
      div(class="space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0")
        dl
          dt(class="sr-only")
            | Published on 
          dd(class="text-base font-medium leading-6 text-gray-500 dark:text-gray-400")
            time(dateTime=data.date) !{formatDate(data.date)}
        div(class="space-y-5 xl:col-span-3")
          div(class="space-y-6")
            div 
              h2(class="text-2xl font-bold leading-8 tracking-tight")
                p(class="text-gray-900 dark:text-gray-100") #{ data.title }
            div(class="prose max-w-none text-gray-500 dark:text-gray-400") #{ data.summary }
            div(class="prose max-w-none text-blue-500") Posted by: #{ data.email }